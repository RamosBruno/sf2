{% extends "ExoUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="table-responsive container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td colspan="2"><h2>Profil</h2></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Siret :</td>
                    <td>{{ profil.siret }}</td>
                </tr>
                <tr>
                    <td>Nom :</td>
                    <td>{{ profil.nomCom }}</td>
                </tr>
                <tr>
                    <td>Adresse :</td>
                    <td>{{ profil.adresse }}</td>
                </tr>
                <tr>
                    <td>Code Postal :</td>
                    <td>{{ profil.codePostal }}</td>
                </tr>
                <tr>
                    <td>Ville :</td>
                    <td>{{ profil.ville }}</td>
                </tr>
                <tr>
                    <td>Pays :</td>
                    <td>{{ profil.pays }}</td>
                </tr>
                <tr>
                    <td>Téléphone :</td>
                    <td>{{ profil.telephone }}</td>
                </tr>
                <tr>
                    <td>Portable :</td>
                    <td>{{ profil.portable }}</td>
                </tr>
                <tr>
                    <td>Mail :</td>
                    <td>{{ profil.mail }}</td>
                </tr>
                <tr>
                    <td>Activite :</td>
                    <td>{{ profil.activite }}</td>
                </tr>
                <tr>
                    <td>Site Web :</td>
                    <td>{{ profil.site }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('modifier_profil', {'id': profil.id }) }}">
        <span class="glyphicon glyphicon-edit"></span>
        modifier profil
    </a>
{% endblock fos_user_content %}